<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/corners" />
            <gradient
                android:angle="90"
                android:startColor="@color/gradientStart"
                android:endColor="@color/gradientEndPressed" />

        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <corners android:radius="@dimen/corners" />

                <gradient
                    android:angle="135"
                    android:centerX="0.7"

                    android:startColor="@color/progressGradientStart"
                    android:centerColor="@color/progressGradientCenter"
                    android:endColor="@color/progressGradientEnd" />
            </shape>
        </clip>
    </item>


</layer-list>